<!DOCTYPE html>
<html>
    <head>
		<meta name="viewport" content="width=device-width, user-scalable=no">
		<title>Resizer Test</title>
        <style>
            body>div>div{
                display:inline-block;
            }
        </style>
    </head>
    <body>

        <% for(var i = 0; i < images.length; i++) { %>
        <div>
            <div class="test">
                <h3>Original</h3>
                <img src="<%= images[i] %>" />
            </div>
            <div class="test">
                <h3>Resized 500x100</h3>
                <img src="/im/?img=<%= images[i] %>&resize=500x100" />
            </div>
        </div>
        <% } %>


    </body>
	<footer>
		<!-- Live reload from anywhere -->
		<script>
			if (window.location.hostname == "localhost" || window.location.hostname.split(".").length == 4) {
				var e = document.createElement("script");
				e.setAttribute("src", "http://" + window.location.hostname + ":35729/livereload.js");
				document.body.appendChild(e);
			}
		</script>
	</footer>
</html>
